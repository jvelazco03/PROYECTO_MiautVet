<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/pet_dark_bg"
    android:padding="16dp"
    tools:context=".ui.PacientesFragment">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerCard"
        style="@style/Widget.MiauVet.Card.Glass"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@drawable/img_cat"
                app:tint="@color/pet_white"
                android:contentDescription="Icono Pacientes" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/title_pacientes"
                android:textColor="@color/pet_white"
                android:layout_marginTop="8dp"
                style="@style/TextAppearance.MiauVet.Headline" />
        </LinearLayout>
    </com.google.android.material.card.MaterialCardView>

    <Button
        android:id="@+id/btnNuevoPaciente"
        style="@style/Widget.MiauVet.Button.Peach"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:text="@string/btn_nuevo_paciente"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@id/headerCard"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvPacientes"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintTop_toBottomOf="@id/btnNuevoPaciente"
        app:layout_constraintBottom_toTopOf="@id/btnVolverMenu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:listitem="@layout/item_paciente" /> <Button
    android:id="@+id/btnVolverMenu"
    style="@style/Widget.MiauVet.Button"
    android:layout_width="0dp"
    android:layout_height="56dp"
    android:text="@string/btn_volver"
    android:backgroundTint="@color/pet_white"
    android:textColor="@color/pet_dark_bg"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>